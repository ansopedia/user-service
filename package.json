{
  "name": "user",
  "version": "0.0.0",
  "description": "user service for ansopedia",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "lint": "eslint src",
    "prepare": "husky install",
    "pretest": "pnpm build",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prod": "set NODE_ENV=production&& pnpm build && pnpm start",
    "start": "node ./build/index.js",
    "test": "jest"
  },
  "keywords": [
    "user",
    "ansopedia"
  ],
  "author": "ansopedia",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.4",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
